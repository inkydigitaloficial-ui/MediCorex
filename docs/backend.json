{
  "entities": {
    "Tenant": {
      "title": "Tenant",
      "type": "object",
      "description": "Represents a tenant in the multi-tenant system.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Tenant entity (matches document ID)." },
        "name": { "type": "string", "description": "Name of the tenant." },
        "slug": { "type": "string", "description": "The subdomain slug for the tenant." },
        "active": { "type": "boolean", "description": "Whether the tenant is active." },
        "plan": { "type": "string", "enum": ["free", "pro", "enterprise", "trial"], "description": "Subscription plan." },
        "trialEnds": { "type": "string", "format": "date-time", "description": "Timestamp for trial expiration." },
        "settings": {
          "type": "object",
          "properties": {
            "theme": { "type": "string" },
            "language": { "type": "string" },
            "timezone": { "type": "string" }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "slug", "active", "plan"]
    },
    "UserProfile": {
        "title": "User Profile",
        "description": "Represents a user's profile information.",
        "type": "object",
        "properties": {
            "uid": { "type": "string", "description": "The user's unique ID from Firebase Authentication." },
            "name": { "type": "string", "description": "The user's full name." },
            "email": { "type": "string", "format": "email", "description": "The user's email address." },
            "phone": { "type": "string", "description": "The user's phone number (optional)." }
        },
        "required": ["uid", "name", "email"]
    },
    "TenantUser": {
      "title": "TenantUser",
      "type": "object",
      "description": "Represents a user's association and role within a tenant.",
      "properties": {
        "tenantId": { "type": "string" },
        "userId": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["owner", "admin", "member"] },
        "permissions": { "type": "array", "items": { "type": "string" } },
        "joinedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "userId", "email", "role"]
    },
    "Paciente": {
      "title": "Paciente",
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    },
    "Consulta": {
      "title": "Consulta",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "summary": { "type": "string" }
      }
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    },
    "AIGeneration": {
      "title": "AIGeneration",
      "type": "object",
      "properties": {
        "input": { "type": "object" },
        "output": { "type": "object" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "tenants/{tenantId}": {
      "schema": { "$ref": "#/entities/Tenant" },
      "description": "Main collection for tenant data."
    },
    "tenants/{tenantId}/pacientes/{pacienteId}": {
      "schema": { "$ref": "#/entities/Paciente" },
      "description": "Sub-collection for tenant-specific customers."
    },
    "tenants/{tenantId}/consultas/{consultaId}": {
      "schema": { "$ref": "#/entities/Consulta" },
      "description": "Sub-collection for tenant-specific appointments."
    },
    "tenants/{tenantId}/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Sub-collection for tenant-specific products."
    },
    "tenants/{tenantId}/ai_generations/{generationId}": {
      "schema": { "$ref": "#/entities/AIGeneration" },
      "description": "Sub-collection for tenant-specific AI generations history."
    },
    "tenant_users/{docId}": {
      "schema": { "$ref": "#/entities/TenantUser" },
      "description": "Collection for user-tenant mappings for performance."
    },
    "users/{userId}": {
        "schema": { "$ref": "#/entities/UserProfile" },
        "description": "Collection to store user profile information."
    }
  }
}
