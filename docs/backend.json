{
  "entities": {
    "Tenant": {
      "title": "Tenant",
      "type": "object",
      "description": "Represents a tenant in the multi-tenant system.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Tenant entity (matches document ID)." },
        "name": { "type": "string", "description": "Name of the tenant." },
        "slug": { "type": "string", "description": "The subdomain slug for the tenant." },
        "active": { "type": "boolean", "description": "Whether the tenant is active." },
        "plan": { "type": "string", "enum": ["free", "pro", "enterprise", "trial"], "description": "Subscription plan." },
        "trialEnds": { "type": "string", "format": "date-time", "description": "Timestamp for trial expiration." },
        "settings": {
          "type": "object",
          "properties": {
            "theme": { "type": "string" },
            "language": { "type": "string" },
            "timezone": { "type": "string" }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "slug", "active", "plan"]
    },
    "TenantUser": {
      "title": "TenantUser",
      "type": "object",
      "description": "Represents a user's association and role within a tenant.",
      "properties": {
        "tenantId": { "type": "string" },
        "userId": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["owner", "admin", "member"] },
        "permissions": { "type": "array", "items": { "type": "string" } },
        "joinedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "userId", "email", "role"]
    },
    "Customer": {
      "title": "Customer",
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    },
    "AIGeneration": {
      "title": "AIGeneration",
      "type": "object",
      "properties": {
        "input": { "type": "object" },
        "output": { "type": "object" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "tenants/{tenantId}": {
      "schema": { "$ref": "#/entities/Tenant" },
      "description": "Main collection for tenant data."
    },
    "tenants/{tenantId}/customers/{customerId}": {
      "schema": { "$ref": "#/entities/Customer" },
      "description": "Sub-collection for tenant-specific customers."
    },
    "tenants/{tenantId}/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Sub-collection for tenant-specific products."
    },
    "tenants/{tenantId}/ai_generations/{generationId}": {
      "schema": { "$ref": "#/entities/AIGeneration" },
      "description": "Sub-collection for tenant-specific AI generations history."
    },
    "tenant_users/{docId}": {
      "schema": { "$ref": "#/entities/TenantUser" },
      "description": "Collection for user-tenant mappings for performance."
    }
  }
}