
{
  "entities": {
    "Tenant": {
      "title": "Tenant",
      "type": "object",
      "description": "Representa um tenant (clínica) no sistema multilocatário.",
      "properties": {
        "name": { "type": "string", "description": "Nome da clínica/tenant." },
        "slug": { "type": "string", "description": "O subdomínio para o tenant." },
        "ownerId": { "type": "string", "description": "UID do usuário proprietário." },
        "active": { "type": "boolean", "description": "Se o tenant está ativo." },
        "plan": { "type": "string", "enum": ["trial", "basico", "essencial", "premium"], "description": "Plano de assinatura atual." },
        "subscriptionStatus": { "type": "string", "enum": ["trialing", "active", "past_due", "canceled", "unpaid", "trial_expired"], "description": "Status da assinatura no Pagar.me." },
        "trialEnds": { "type": "string", "format": "date-time", "description": "Timestamp de quando o período de teste termina." },
        "settings": {
          "type": "object",
          "properties": {
            "theme": { "type": "string" },
            "language": { "type": "string" },
            "timezone": { "type": "string" }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "slug", "ownerId", "active", "plan", "subscriptionStatus"]
    },
    "UserProfile": {
        "title": "User Profile",
        "description": "Representa as informações de perfil de um usuário.",
        "type": "object",
        "properties": {
            "uid": { "type": "string", "description": "O UID do Firebase Auth." },
            "name": { "type": "string", "description": "Nome completo do usuário." },
            "email": { "type": "string", "format": "email", "description": "Email do usuário." },
            "phone": { "type": "string", "description": "Telefone do usuário (opcional)." }
        },
        "required": ["uid", "name", "email"]
    },
    "TenantUser": {
      "title": "TenantUser",
      "type": "object",
      "description": "Representa a associação e o papel de um usuário dentro de um tenant.",
      "properties": {
        "tenantId": { "type": "string" },
        "userId": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["owner", "admin", "member", "owner_trial_expired"] },
        "permissions": { "type": "array", "items": { "type": "string" } },
        "joinedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["tenantId", "userId", "email", "role"]
    },
    "Paciente": {
      "title": "Paciente",
      "type": "object",
      "properties": {
        "nome": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "cpf": { "type": "string" },
        "telefone": { "type": "string" }
      },
       "required": ["nome", "email"]
    },
    "Consulta": {
      "title": "Consulta",
      "type": "object",
      "properties": {
        "summary": { "type": "string", "description": "O resumo ou anotações da consulta" },
        "createdBy": { "type": "string", "description": "UID do usuário que criou o registro" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["summary", "createdBy", "createdAt"]
    },
    "Agendamento": {
      "title": "Agendamento",
      "type": "object",
      "description": "Representa um agendamento na agenda da clínica.",
      "properties": {
        "pacienteId": { "type": "string", "description": "ID do paciente agendado." },
        "pacienteNome": { "type": "string", "description": "Nome do paciente para exibição rápida." },
        "start": { "type": "string", "format": "date-time", "description": "Início do agendamento." },
        "title": { "type": "string", "description": "Um título ou breve descrição para o agendamento." },
        "status": { "type": "string", "enum": ["agendado", "confirmado", "cancelado", "realizado"], "description": "Status do agendamento." },
        "createdBy": { "type": "string", "description": "UID do usuário que criou o agendamento." }
      },
      "required": ["pacienteId", "pacienteNome", "start", "title", "status", "createdBy"]
    },
    "AIAuditEntry": {
      "title": "AIAuditEntry",
      "type": "object",
      "description": "Entrada de auditoria para uma geração de IA.",
      "properties": {
        "prompt": { "type": "string" },
        "resumo": { "type": "string" },
        "geradoEm": { "type": "string", "format": "date-time" },
        "geradoPor": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "tenants/{tenantId}": {
      "schema": { "$ref": "#/entities/Tenant" },
      "description": "Coleção principal para os dados do tenant (clínica)."
    },
    "tenants/{tenantId}/pacientes/{pacienteId}": {
      "schema": { "$ref": "#/entities/Paciente" },
      "description": "Subcoleção para os pacientes específicos de um tenant."
    },
    "tenants/{tenantId}/pacientes/{pacienteId}/consultas/{consultaId}": {
      "schema": { "$ref": "#/entities/Consulta" },
      "description": "Subcoleção para as consultas e anotações de um paciente."
    },
    "tenants/{tenantId}/pacientes/{pacienteId}/ai_audit_trail/{auditId}": {
      "schema": { "$ref": "#/entities/AIAuditEntry" },
      "description": "Trilha de auditoria para resumos gerados por IA para um paciente."
    },
    "tenants/{tenantId}/agendamentos/{agendamentoId}": {
      "schema": { "$ref": "#/entities/Agendamento" },
      "description": "Subcoleção para os agendamentos de um tenant."
    },
    "tenant_users/{docId}": {
      "schema": { "$ref": "#/entities/TenantUser" },
      "description": "Coleção para mapeamento de usuário-tenant para performance e segurança."
    },
    "users/{userId}": {
        "schema": { "$ref": "#/entities/UserProfile" },
        "description": "Coleção para armazenar informações de perfil dos usuários."
    }
  }
}
